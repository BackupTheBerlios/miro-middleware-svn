include $(top_srcdir)/config/Make-rules
if COND_PCH
AM_CPPFLAGS+=-include $(top_builddir)/pch/all_static.h
endif


## binaries to be built
bin_PROGRAMS = FirstBinary SecondBinary

## sourcefiles needed for the different binaries to be built
## the prefix of the following macros must have the same name as the respective binary
FirstBinary_SOURCES  = firstBinary.cpp  firstBinary.h  additionalFile.cpp additionalFile.h
SecondBinary_SOURCES = secondBinary.cpp secondBinary.h additionalFile.cpp additionalFile.h

## you may add libraries to be linked here (normally, libmiro should be enough, it is
## allready pre-linked against all necessary ACE, TAO and Qt variables)
FirstBinary_LDADD  = -lmiro
SecondBinary_LDADD = -lmiro

all-local: $(bin_PROGRAMS)
	$(INSTALLPROGRAMS)

clean-local:
	$(CLEANPROGRAMS)
