# common build rules

.xml.cpp:
	$(top_builddir)/src/makeParams/MakeParams -f $< -n $(@:.cpp=) -s cpp -h h

# these rules do the trick of local install/cleaning the libraries and programs

INSTALLLTLIBRARIES=installpath=`(cd $(PWD)/$(top_builddir)/lib/ ; pwd)`;hit=0; for i in $(lib_LTLIBRARIES); do if test $$i -nt $$installpath/$$i; then /bin/sh $(top_builddir)/libtool --mode=install /usr/bin/install $$i $$installpath/$$i; hit=1; fi; done; if test $$hit -gt 0; then libtool --finish $$installpath; fi

INSTALLLIBRARIES=installpath=`(cd $(PWD)/$(top_builddir)/lib/ ; pwd)`;hit=0; for i in $(lib_LIBRARIES); do if test $$i -nt $$installpath/$$i; then /bin/sh $(top_builddir)/libtool --mode=install /usr/bin/install $$i $$installpath/$$i; hit=1; fi; done; if test $$hit -gt 0; then libtool --finish $$installpath; fi

INSTALLPROGRAMS=installpath=`(cd $(PWD)/$(top_builddir)/bin/ ; pwd)`; for i in $(bin_PROGRAMS); do if test $$i -nt $$installpath/$$i; then /bin/sh $(top_builddir)/libtool --mode=install /usr/bin/install $$i $$installpath/$$i; fi; done

CLEANLTLIBRARIES=for i in $(lib_LTLIBRARIES); do if test -f $(top_builddir)/lib/$$i; then rm -f $(top_builddir)/lib/`basename $$i .la`.*; fi; done

CLEANLIBRARIES=for i in $(lib_LIBRARIES); do if test -f $(top_builddir)/lib/$$i; then rm -f $(top_builddir)/lib/$$i; fi; done

CLEANPROGRAMS=for i in $(bin_PROGRAMS); do if test -f $(top_builddir)/bin/$$i; then rm -f $(top_builddir)/bin/$$i; fi; done

