<!DOCTYPE UlmSparrowsConfig >
<xml>
  <robot>
    <type>Pioneer1</type>      <!-- B21, Pioneer1, Sparrow99 -->
    <speech>none</speech>
    <pantilt>none</pantilt> <!-- none or dpPanTilt -->
    <laser>none</laser> <!-- none or SICK -->
    <framegrabber>bttv8</framegrabber> <!-- none, bttv8 or meteor -->
  </robot>

  <Pioneer1>
    <pioneerBoard>
      <device>/dev/ttyS0</device>
      <baudrate>9600</baudrate>
      <databits>8</databits>
      <stopbits>1</stopbits>
      <parityenb>0</parityenb>
      <sonar>
         <scandescription>
           <scantype>3</scantype>
           <sensorgroup height="210" distance="200" beta="0" gamma="0">
             <description>
               <minrange>100</minrange>
               <maxrange>5000</maxrange>
               <focus>15</focus>
             </description>
             <sensor><alpha>60</alpha><beta>30</beta><distance>150</distance></sensor>
             <sensor><alpha>45</alpha><distance>170</distance></sensor>
             <sensor><alpha>25</alpha><distance>175</distance></sensor>
             <sensor><alpha>12.5</alpha><distance>180</distance></sensor>
             <sensor><alpha>-12.5</alpha><distance>180</distance></sensor>
             <sensor><alpha>-25</alpha><distance>175</distance></sensor>
             <sensor><alpha>-45</alpha><distance>170</distance></sensor>
             <sensor><alpha>-60</alpha><beta>-30</beta><distance>150</distance></sensor>
             <sensor><alpha>-180</alpha></sensor>
             <sensor><alpha>-150</alpha></sensor>
             <sensor><alpha>-120</alpha></sensor>
             <sensor><alpha>-90</alpha></sensor>
             <sensor><alpha>-90</alpha></sensor>
             <sensor><alpha>-60</alpha></sensor>
             <sensor><alpha>-30</alpha></sensor>
             <sensor><alpha>-0</alpha></sensor>
           </sensorgroup>
           <sensorgroup height="1090" distance="200" beta="0" gamma="0">
             <description>
               <minrange>100</minrange>
               <maxrange>5000</maxrange>
               <focus>15</focus>
             </description>
             <sensor><alpha>60</alpha><beta>30</beta><distance>150</distance></sensor>
             <sensor><alpha>45</alpha><distance>170</distance></sensor>
             <sensor><alpha>25</alpha><distance>175</distance></sensor>
             <sensor><alpha>12.5</alpha><distance>180</distance></sensor>
             <sensor><alpha>-12.5</alpha><distance>180</distance></sensor>
             <sensor><alpha>-25</alpha><distance>175</distance></sensor>
             <sensor><alpha>-45</alpha><distance>170</distance></sensor>
             <sensor><alpha>-60</alpha><beta>-30</beta><distance>150</distance></sensor>
           </sensorgroup>
         </scandescription>
      </sonar>
    </pioneerBoard>
  </Pioneer1>
</xml>
