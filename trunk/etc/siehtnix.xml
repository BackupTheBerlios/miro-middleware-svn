    <pioneerBoard>
      <device>/dev/tts/0</device>
      <baudrate>9600</baudrate>
      <databits>8</databits>
      <stopbits>1</stopbits>
      <parityenb>0</parityenb>
      <!-- sonar>
         <scandescription>
           <scantype>3</scantype>
           <eventname>Sonar</eventname>
           <sensorgroup height="400" distance="248" beta="0" gamma="0">
             <description>
               <minrange>100</minrange>
